<style>
  .animated-radial-gradient {
    background: linear-gradient(
      to bottom right,
      #f00,
      #0f0
    ); /* Initial gradient */
    width: 100%;
    height: 100vh;
    position: absolute;
    top: 0;
    left: 0;
    z-index: -50;
  }
</style>

<script>
  import anime from "animejs";
  import { useEffect } from "react";
  export let animate = true; // Optional prop to control animation

  const animateGradient = () => {
    if (!animate) {
      return; // Skip animation if not enabled
    }

    const animation = anime({
      targets: ".animated-radial-gradient",
      background: [
        {
          value: "linear-gradient(to bottom right, #f00, #0f0)",
          duration: 2000,
        },
        { value: "linear-gradient(to top left, #0f0, #f00)", duration: 2000 },
        {
          value: "linear-gradient(to bottom right, #f00, #0f0)",
          duration: 2000,
        },
      ],
      loop: true,
      easing: "easeInOutSine",
    });
  };

  useEffect(() => {
    animateGradient();
  }, [animate]);
</script>

<div class="animated-radial-gradient"><slot /></div>
