---
import colourScheme from "../scripts/Pallete";
const periwinkle =
  colourScheme[1][0].substring(0, colourScheme[1][0].length - 2) + "0.8)";
---

<div class="mainAreaContainer">
  <slot />
</div>

<style define:vars={{ periwinkle }}>
  .mainAreaContainer {
    width: 90%;
    border-width: 5px;
    border-color: white;
    border-radius: 15px;
    background-color: var(--periwinkle);
    margin-top: 5%;
    padding: 5%;
    /* padding-top: 10%; */
    box-shadow: 0px -2px 22px 0px #000000;
    z-index: -40;
    min-height: 100vh;
  }
</style>
