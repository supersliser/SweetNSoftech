---
import colourScheme from "../scripts/Pallete";
const periwinkle =
  colourScheme[1][0].substring(0, colourScheme[1][0].length - 2) + "0.9)";
---

<div class="mainAreaContainer">
  <slot />
</div>

<style define:vars={{ periwinkle }}>
  .mainAreaContainer {
    position: static;
    width: 80%;
    border-width: 5px;
    border-color: white;
    background-color: white;
    margin-top: 5%;
    border-top-right-radius: 8px;
    border-bottom-right-radius: 8px;
    /* padding: 5%; */
    /* padding-top: 10%; */
    /* box-shadow: 0px -2px 22px 0px #000000; */
    z-index: 2;
    min-height: 100vh;
  }
</style>
