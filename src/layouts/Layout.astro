---
interface Props {
  title: string;
}

const { title } = Astro.props;
import Title from "../components/Title.astro";
import Navbar from "../components/Navbar.astro";
import BackgroundAnim from "../components/BackgroundAnim.astro";
import MainArea from "../components/MainArea.astro";
import BottomArea from "../components/BottomArea.astro";
// Supports weights 100-900
import "@fontsource-variable/work-sans";
---

<!doctype html>
<html lang="en">
  <head>
    <script type="text/javascript">
      (function (c, l, a, r, i, t, y) {
        c[a] =
          c[a] ||
          function () {
            (c[a].q = c[a].q || []).push(arguments);
          };
        t = l.createElement(r);
        t.async = 1;
        t.src = "https://www.clarity.ms/tag/" + i;
        y = l.getElementsByTagName(r)[0];
        y.parentNode.insertBefore(t, y);
      })(window, document, "clarity", "script", "l4ayjj8m08");
    </script>
    <meta charset="UTF-8" />
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | SweetNSoft tech</title>
  </head>
  <body>
    <BackgroundAnim>
      <Navbar currentPage={title} />
      <MainArea>
        <slot />
      </MainArea>
    </BackgroundAnim>
    <BottomArea />
  </body>
</html>

<style>
  body {
    border-width: 0;
    margin: 0;
    padding: 0;
    width: 100%;
  }

  p {
    font-family: "Work Sans Variable", sans-serif;
  }
</style>
